                    @*     <a class="text-success" href="@Url.Action("Login", "Login")">Aveti deja cont? Logati-va aici.</a> *@
                    @* </div> *@
                    <button style="border-radius:.5em" type="submit" class="btn btn-danger">Adauga simptom</button>
                    
                    
                            @* <button style="border-radius:.5em" type="submit" class="btn btn-success">Sign Up</button> *@
