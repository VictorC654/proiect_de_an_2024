@using System.Activities.Statements
@using System.Web.UI.WebControls
@using symptomSage.Domain.Enums
@using symptomSage.Extension
@using symptomSage.Models
@model symptomSage.Models.SymptomRegister
@* @model symptomSage.Models.SymptomsData *@
<style>
 .myTh
 {
    color: white;
    font-weight: bold;
    letter-spacing:.1em;
 }
 
 .addButton
 {
    background: transparent;
    padding: 1em;
    color: white;
    margin: 0 auto;
    font-weight: bold;
    border: none;
    border-radius: .5em;
    transition:.5s all ease;
 }
 .addButton:hover
 {
    color: white;
    transition:.5s all ease;
 }
 .card-img-top {
     width: 100%;
     height: 15vw;
     object-fit: cover;
 }
</style>
@{
       var user = System.Web.HttpContext.Current.GetMySessionObject();
       var checkUser = System.Web.HttpContext.Current.GetMySessionObject() != null;
    }
<section class="page-header-box bg-primary">
        <div style="display:flex;flex-direction: row;justify-content: center;">
            <div style="width:35%;display:flex;flex-direction: column;margin-left:15em;border-right: 2px solid white;padding: 1.5em;">
                <div style="font-size:4em;font-weight: bold;"><i class="fa-regular fa-circle-check mr-2"></i>Am constatat că</div>
                <div style="font-weight:bold;font-size:1em;margin-left: .1em;margin-top: -.8em;font-style: italic;">
                    
                    Ar fi ideal să utilizezi 
                    @foreach (var medicine in @ViewBag.medicine)
                    {
                        @medicine.Name
                    }
                    @* @if(checkUser) *@
                    @* { *@
                    @*     string adresezi = "și să te adresezi la un"; *@
                    @*     adresezi.ToString(); *@
                    @*     foreach (var doctor in @ViewBag.doctors) *@
                    @*     { *@
                    @*         @doctor.Name *@
                    @*     } *@
                    @* } *@
                    
                </div>  
                <div class="text-light" style="font-size:1em;margin-left:.1em;margin-top: .5em;">
                    Este recomandat să utilizezi medicamentul conform instrucțiunilor. Asigură-te că urmezi 
                    recomandările noastre pentru a obține cele mai bune rezultate. Poți face click pe medicament 
                    pentru a vedea descrierea 
                    completă și informațiile suplimentare despre utilizare și posibile efecte secundare.               
                </div>
            </div>
            <div style="width:60%;display: flex;flex-direction: row;">
                <img src="../../Images/searchResult.svg" alt="" style="left:0;" width="300" class="img-fluid mx-auto d-block">
            </div>
        </div>
</section>
    <div class="col-sm" style="">
        <section class="section">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-8">
                        <div class="row">
                            <div class="col-lg-6">
                                @foreach (var medicine in @ViewBag.medicine)
                                {
                                    <div class="card overflow-hidden mb-4">
                                        <div class="blog-img">
                                            <img src="@Url.Content(medicine.imagePath)" alt="" class="card-img-top">
                                            
                                        </div>
                                        <div class="blog-content p-3 mx-3">
                                            <h4 class="mt-0"><a href="" class="text-dark">@medicine.Name</a></h4>
                                            <p class="text-muted mb-0">Fă click pentru a vizualiza descrierea medicamentului</p>
                                        </div>
                                        <div class="blog-meta px-4 pb-3">
                                            @* <p class="float-right text-muted pt-1 mb-0">@medicine.Category</p> *@
                                            <div class="float-left mr-2">
                                                <i class="fa-solid fa-pills"></i>
                                            </div>
                                            <h5 class="font-14 mt-1">Medicamente</h5>
                                        </div>
                                    </div>
                                }
                            </div>
                            <div class="col-lg-6">
                                @if (!checkUser)
                                {
                                    <div class="card overflow-hidden mb-4">
                                        <div class="blog-img">
                                            <img src="https://png.pngtree.com/element_our/png/20180930/lock-icon-png_117519.jpg" alt="" class="card-img-top">
                                            @* <i class="fa-solid fa-lock"></i> *@
                                        </div>
                                        <div class="blog-content p-3 mx-3">
                                            <h4 class="mt-0"><a href="" class="text-dark">Medicii nu sunt disponibili</a></h4>
                                            <p class="text-muted mb-0">Pentru a vizualiza medicii, trebuie să vă autentificați.</p>
                                        </div>
                                        <div class="blog-meta px-4 pb-3">
                                            <p class="float-right text-muted pt-1 mb-0">-</p>
                                            <div class="float-left mr-2">
                                                <i class="fa-solid fa-user-doctor"></i>
                                            </div>
                                            <h5 class="font-14 mt-1">Medici</h5>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    foreach (var doctor in @ViewBag.doctors)
                                    {
                                        <div class="card overflow-hidden mb-4">
                                            <div class="blog-img">
                                                <img src="~/Images/doctor.png" alt="" class="card-img-top">
                                                @* <i class="fa-solid fa-lock"></i> *@
                                            </div>
                                            <div class="blog-content p-3 mx-3">
                                                <h4 class="mt-0"><a href="blog-details.html" class="text-dark">@doctor.Name</a></h4>
                                                <p class="text-muted mb-0">Fă click pentru a vizualiza descrierea medicamentului</p>
                                            </div>
                                            <div class="blog-meta px-4 pb-3">
                                                <p class="float-right text-muted pt-1 mb-0">-</p>
                                                <div class="float-left mr-2">
                                                    <i class="fa-solid fa-user-doctor"></i>
                                                </div>
                                                <h5 class="font-14 mt-1">Medici</h5>
                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="blog-right-sidebar">
                            <div class="widget widget-categories card mb-4">
                                <div class="p-4">
                                    <h4 class="widget-title mt-0"><i class="fa-solid fa-stethoscope mr-2"></i>Simptome selectate</h4>
                                    <hr>
                                    <ul class="list-unstyled mb-0">
                                        @foreach (var symptom in @ViewBag.selectedSymptoms)
                                        { 
                                            <li><i class="pe-7s-car float-left mr-2 text-primary font-22"></i> @symptom <span class="float-right"></span></li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section class="section">
        <div class="container-fluid">
            <div class="row mb-4">
                <div class="col-lg-3">
                    <div class="card">
                        <div class="card-body text-center">
                            <div class="mb-3">
                                <i class="pe-7s-phone h2 text-primary"></i>
                            </div>
                            <h4>Phone</h4>
                            <p class="text-muted mb-0">(123) 456-7890</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="card">
                        <div class="card-body text-center">
                            <div class="mb-3">
                                <i class="pe-7s-mail h2 text-primary"></i>
                            </div>
                            <h4>E - mail</h4>
                            <p class="text-muted mb-0">example@abc.com</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="card">
                        <div class="card-body text-center">
                            <div class="mb-3">
                                <i class="pe-7s-global h2 text-primary"></i>
                            </div>
                            <h4>Web</h4>
                            <p class="text-muted mb-0">examplexyz.com</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="card">
                        <div class="card-body text-center">
                            <div class="mb-3">
                                <i class="pe-7s-map-marker h2 text-primary"></i>
                            </div>
                            <h4>Address</h4>
                            <p class="text-muted mb-0">2395 Point Street Chicago, IL 60639</p>
                                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </section>
        </div>
<script>
    $('#addSymptomModal').on('shown.bs.modal', function () {
      $('#myInput').trigger('focus')
    })
</script>

