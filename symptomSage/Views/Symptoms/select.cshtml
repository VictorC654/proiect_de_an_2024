@using System.Web.UI.HtmlControls
@using symptomSage.Models
@model symptomSage.Models.SymptomsData
<style>

:root {
  --blue: #007bff;
  --indigo: #6610f2;
  --purple: #6f42c1;
  --pink: #e83e8c;
  --red: #dc3545;
  --orange: #fd7e14;
  --yellow: #ffc107;
  --green: #28a745;
  --teal: #20c997;
  --cyan: #17a2b8;
  --white: #fff;
  --gray: #6c757d;
  --gray-dark: #343a40;
  --primary: #007bff;
  --secondary: #6c757d;
  --success: #28a745;
  --info: #17a2b8;
  --warning: #ffc107;
  --danger: #dc3545;
  --light: #f8f9fa;
  --dark: #343a40;
  }
/* The container */
.symptomContainer {
  display: block;
  position: relative;
  /*padding-left: 35px;*/
  padding: 1em;
  margin-bottom: 12px;
  background-color:rgb(220,220,220);
  cursor: pointer;
  font-size: 1em;
  width: 15em;
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
  transition: .5s all ease;
}

.symptomContainer input {
  position: absolute;
  opacity: 0;
  cursor: pointer;
  height: 0;
  width: 0;
}

/* Create a custom checkbox */
.checkmark {
display: none;
  position: absolute;
  top: 0;
  left: 0;
  border-radius:10px;
  height: 25px;
  width: 25px;
  background-color: #eee;
}

.symptomContainer:hover  {
  background-color: #87CEFA;
  transition: .5s all ease;
}

.symptomContainer:has(> input:checked)
{
    transition: .5s all ease;
    background-color:#87CEFA !important;
    color: white;
}

#searchBar
{
    padding:1.5em;
    border: black;
    margin-bottom: .2em;
    height: 3em;
    z-index:1;
    width: 30em;   
    transition: 2s all ease;
}

.selectedSymptom
{
    background-color:transparent;
    border: 2px solid #87CEFA;
    border-radius: 2em;
    padding: 1em;
    font-weight: bold;
    font-size: .9em;
    margin-top: -1.5em;
    margin-bottom: 1em;
    margin-left: .5em;
    transition: 1s all ease;
    cursor:pointer;
}

.selectedSymptom i
{
    color: #87CEFA;
    transition: 1s all ease;
}

.selectedSymptom:hover i
{
    transition: 1s all ease;
    color: red;
}

.selectedSymptom:hover
{
    transition: 1s all ease;
    background-color:white;
}


.notSelectedSymptom
{
    background-color:transparent;
    padding: 1em;
    font-weight: bold;
    font-size: .9em;
    margin-top: -1.5em;
    margin-bottom: 1em;
    margin-left: .5em;
}


