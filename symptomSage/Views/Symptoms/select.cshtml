@using System.Web.UI.HtmlControls
@using symptomSage.Models
@model symptomSage.Models.SymptomsData

<section class="page-header-box bg-success">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="text-left">
                    <h3 class="page-header-title text-white" style="font-size:2em;">Avem disponibile o gama larga de simptome</h3>
                </div>
                <div class="text-right">
                    <div class="">
                        <img src="../../Images/pic3.png" alt="" width="250" class="">
                    </div>
                </div>
            </div>
        </div> <!--end row-->
    </div> <!--end container-->
</section>
<section class="section">
    <div class="container-fluid">
        <div class="col" align="">
            <div class="col-lg-4">

                    
                <p>
                    <button class="btn btn-success" type="button" data-toggle="collapse" data-target="#simptomeGenerale" aria-expanded="false" aria-controls="collapseExample">
                        Simptome generale
                    </button>
                </p>
                @Html.ValidationSummary(true)
                    @using (Html.BeginForm("SearchSymptom", "Symptoms", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="" id="simptomeGenerale">
                            <div class="card card-body">
                
                                @foreach (var symptom in ViewBag.symptomsList)
                                {
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="selectedSymptoms" value="@symptom.Name">
                                        <label class="form-check-label">
                                            @symptom.Name
                                        </label>
                                    </div>
                                }
                            </div>
                        </div>

                <button type="submit">Cauta</button>
                }
            </div>
        </div>
        </div>
</section>

