@{
    ViewBag.Title = "Home Page";
}

    <section class="bg-home bg-primary" id="home">
        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="home-content text-center mb-4">
                        
                        <h1 class="home-title mb-2 text-white">Sănătatea la un clic distanță: <br>Diagnosticare și Informare în Era Digitală! </h1>
                        <p class="text-white-50 home-desc mb-4">Cu algoritmi avansați de diagnosticare și integrare cu baze de date medicale de ultimă generație, PIDI-Med (Platforma de Diagnosticare și Informare Medicală) transformă procesul de înțelegere a simptomelor într-o experiență simplă și eficientă. Introdu simptomele tale, iar într-un clic, primești recomandări personalizate de la medici specializați.</p>
                        <div>
                            <a href="#" class="mr-1 search-button"> <i class="fa-solid fa-magnifying-glass mr-1"></i>Cauta</a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end row -->
            <div class="row justify-content-center">
                <div class="col-lg-7">
                    <div class="home-img">
                        <img src="../../Images/indexpic.png" alt="" width="450" class="img-fluid mx-auto d-block">
                    </div>
                </div>
            </div>
            <!-- end row -->
        </div>
        <!-- end container-fluid -->
    </section>
    <!-- home end -->
    <!-- services start -->
    <section class="section" id="services">
        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-lg-7">
                    <div class="title text-center my-4">
                        <h3 class="mb-3">Avantajele utilizării serviciilor pe care le oferim</h3>
                        <p class="text-muted">text</p>
                    </div>
                </div>
            </div>
            <!-- end row -->
            <div class="row">
                <div class="col-lg-4 col-sm-6">
                    <div class="services-box text-center mt-3 p-3">
                        <div class="services-icon mb-3">
                            <i class="pe-7s-display1 h2 mt-1"></i>
                        </div>
                        <h4>Diagnosticare Personalizată</h4>
                        <p class="text-muted">Selectați-vă simptomele și noi vă vom oferi cel mai optim tratament</p>
                    </div>
                </div>
                <div class="col-lg-4 col-sm-6">
                    <div class="services-box text-center mt-3 p-3">
                        <div class="services-icon mb-3">
                            <i class="pe-7s-science h2 mt-0"></i>
                        </div>
                        <h4>Bază de Date Extinsă</h4>
                        <p class="text-muted">Beneficiați de acces la o bază de date vastă și actualizată de informații medicale</p>
                    </div>
                </div>
                <div class="col-lg-4 col-sm-6">
                    <div class="services-box text-center mt-3 p-3">
                        <div class="services-icon mb-3">
                            <i class="pe-7s-phone h2 mt-0"></i>
                        </div>
                        <h4>Recomandări de medici</h4>
                        <p class="text-muted">Primiți recomandări de medici pentru problemele dvs de sănătate</p>
                    </div>
                </div>

            </div>
            <!-- end row -->
        </div>
        <!-- end container-fluid -->
    </section>
            <!-- counter start -->
    
    <section class="py-5 bg-primary">
                <div class="container-fluid">
                    <div class="row" id="counter">
                        <div class="col-lg-3 col-sm-6">
                            <div class="counter-box text-center my-2 p-3">
                                <div class="counter-icon text-white-50">
                                    <i class="pe-7s-add-user display-4"></i>
                                </div>
                                <div class="counter-content">
                                    <h2 class="counter-value text-white mt-0 mb-3" data-count="1200">
                                        @ViewBag.nrOfSymptoms
                                    </h2>
                                    <p class="text-white-50 mb-0">Simptome disponibile </p>
                                </div>
                            </div>
                        </div>
    
