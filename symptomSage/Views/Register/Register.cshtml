@{
    Layout = "~/Views/Shared/_LoginRegisterLayout.cshtml";
}
@model symptomSage.Models.UserRegister
<style>
    html, body
    {
        height: 100%;
        margin: 0;
        background-attachment: fixed;
    }
    body 
    {
        display: flex;
        flex-direction: column;
        align-items: center;justify-content: center;
    }
</style>
            <div class="mb-2 text-white fw-bold" style="font-weight:bold;font-size:2em;">
                <i class="fa-regular fa-hospital mr-1 text-white"></i> symptomSage
            </div>
        <div class="pl-1 pr-1 bg-light" style="width:35em;height:30em;display:flex;flex-direction:column;align-items: center;justify-content: center;border-radius: 1em;">
            <div style="font-size:1.3em;" class="text-dark "><i style="font-size:1.5em;" class="text-primary mr-1 fa-solid fa-lock "></i>
                Creaza cont
            </div>
            <div class="mb-3" style="margin-top:-.1em;letter-spacing:.1em;font-size:.8em;">INTRODU DATELE PENTRU A CREEA CONTUL</div>
            @* @Html.ValidationSummary(true) *@
            @using (Html.BeginForm("Register", "Register", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                    <div class="form-group border-danger">
                        @Html.TextBoxFor(model => model.Username, new
                        {
                            placeholder = "Username",
                            value = "",
                            name = "username",
                            id = "username",
                            @class = "form-control"
                        })
                        @Html.ValidationMessageFor(model => model.Username)
                        @Html.TextBoxFor(model => model.Email, new { @class="form-control mt-1", placeholder = "example@mail.com", type="email", id = "email" })
                        @Html.TextBoxFor(model => model.Password, new
                        {
                          placeholder = "Password",
                          type = "password",
                          id = "password",
                          @class  = "form-control mt-1"
                        })
                        @Html.ValidationMessageFor(model => model.Password)
                        @Html.TextBoxFor(model => model.ConfirmPassword, new
                        {
                          placeholder = "Repeat password",
                          type = "password",
                          id = "re_pass", 
                          @class  = "form-control mt-1"
                        })
                        @Html.ValidationMessageFor(model => model.ConfirmPassword)
                        
                    </div>
                    <div class="form-group">
                        <a class="text-primary" href="@Url.Action("Login", "Login")">Aveti deja cont? Logati-va aici.</a>
                    </div>
                    @* @Html.TextBox("signup", "register", new { @class = "btn btn-success", type = "submit" }) *@
                    <button style="border-radius:.5em" type="submit" class="btn btn-primary">Register</button>
                    <a style="border-radius:.5em" class="btn btn-warning" href="@Url.Action("Index", "Home")">Pagina principala</a>
                    
                    
                            @* <button style="border-radius:.5em" type="submit" class="btn btn-success">Sign Up</button> *@
                    @* <a style="border-radius:.5em" class="btn btn-warning" href="@Url.Action("Index", "Home")">Pagina principala</a> *@
            }
        </div>
