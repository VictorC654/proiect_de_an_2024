@{
    Layout = "~/Views/Shared/_LoginRegisterLayout.cshtml";
}
@model symptomSage.Models.UserLogin
<style>
    html, body
    {
        height: 100%;
        margin: 0;
        background-attachment: fixed;
    }
    body 
    {
        display: flex;
        align-items: center;justify-content: center;
    }
</style>
        <div class="pl-1 pr-1 bg-light" style="width:35em;height:25em;display:flex;flex-direction:column;align-items: center;justify-content: center;border-radius: 1em;">
            <div style="font-size:1.3em;" class="text-dark "><i style="font-size:1.5em;" class="text-success mr-2 fa-solid fa-lock "></i>
                Creaza cont
            </div>
            <div class="mb-3" style="margin-top:-.1em;letter-spacing:.1em;font-size:.8em;">INTRODU DATELE PENTRU A CREEA CONTUL</div>
            @Html.ValidationSummary(true)
            @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @id = "LoginForm" }))
            {
                @Html.AntiForgeryToken()
                <form class="">
                    <div class="form-group border-danger">
                        @Html.TextBoxFor(m => m.Credential, new
                            {
                              placeholder = "example@mail.com",
                              value = "",
                              name = "username",
                              id = "username",
                              @class = "form-control"
                            })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Password, new
                            {
                              placeholder = "*********",
                              type = "password",
                              value = "",
                              name = "password",
                              id = "password",
                              @class  = "form-control"
                            })
                    </div>
                    <div class="form-group">
                        <a class="text-success" href="@Url.Action("Login", "Login")">Aveti deja cont? Logati-va aici.</a>
                    </div>
                    <button type="submit" class="btn btn-success">Sign Up</button>
                </form>
            }
        </div>
