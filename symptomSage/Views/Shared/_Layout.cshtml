@using symptomSage.Domain.Enums
@using symptomSage.Extension

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>symptomSage</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="" name="description" />
    <meta content="Coderthemes" name="author" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    @Styles.Render("~/Content/templateCSS")
    
    
    @if (IsSectionDefined("Styles"))
    {
        @RenderSection("Styles", required: false)
    }
    <link href="~/website2.ico" rel="shortcut icon" type="image/x-icon" />
<link href='https://fonts.googleapis.com/css?family=Varela Round' rel='stylesheet'>
    
    <script src="https://kit.fontawesome.com/b39e74830d.js" crossorigin="anonymous"></script>
    <style>
    body {
        font-family: 'Varela Round';
    }
    </style>
</head>

<body>
    @{
       var checkUser = System.Web.HttpContext.Current.GetMySessionObject() != null;
    }
    <header class="sticky">
        <!--Navbar Start-->
        <nav class="navbar navbar-expand-lg fixed-top navbar-custom" id="navbar">
            <div class="container-fluid">
                <!-- LOGO -->
                <a class="logo text-uppercase" href="index.html">
                    <div class="logo-light" style="color:white;font-size:1.5em;font-weight:bold;"><i class="fa-regular fa-hospital mr-1 text-white"></i> symptomSage</div>
                    <div class="logo-dark text-primary" style="font-size:1.5em;font-weight:bold;"><i class="fa-regular fa-hospital mr-1 text-primary"></i> symptomSage</div>
                </a>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="mdi mdi-menu"></i>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav ml-auto navbar-center" id="mySidenav">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Home")"><i class="fa-solid fa-house mr-1"></i>Acasa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("select", "Symptoms")"><i class="fa-solid fa-arrow-pointer mr-1"></i>Selecteaza simptome</a>
                        </li>
                        @if (System.Web.HttpContext.Current.GetMySessionObject() != null)
                        {
                            var checkUserRole = checkUser && System.Web.HttpContext.Current.GetMySessionObject().Level == URole.Admin || System.Web.HttpContext.Current.GetMySessionObject().Level == URole.Moderator;

                            if (checkUserRole)
                            {
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("SAdminPanel", "Symptoms")">
                                        <i class="fa-solid fa-screwdriver-wrench"></i>
                                        Admin Panel
                                    </a>
                                </li>
                            }
                        }
                            
                        @if(checkUser)
                        {
                        <li class="nav-item">
                            <a style="font-weight:bold;" class="nav-link" href="@Url.Action("Login", "Login")">
                                <i class="fa-solid fa-user mr-1"></i>@System.Web.HttpContext.Current.GetMySessionObject().Username
                            </a>
                        </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Login", "Login")">
                                    <i class="fa-solid fa-user mr-1"></i>Login
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
        <!-- Navbar End -->
    </header>
    @RenderBody()
    <hr />
    <!-- footer start -->
    <footer class="bg-dark footer text-white">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="footer-cta py-4 mb-4">
                        <div class="row align-items-center">
                            <div class="col-md-8">
                                <div class="cta-content">
                                    <h3 class="text-white mb-2">Cele mai bune diagnosticări</h3>
                                    <p class="text-white-50 mo-mb-20 mb-0">Algoritmi sofisticați oferă o diagnostică precisă și modalități de recuperare a sănătății.</p>

                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="text-md-right">
                                    <a href="@Url.Action("select", "Symptoms")" class="btn btn-purple">Selectează simptome<i class="mdi mdi-arrow-right"></i> </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-3">
                    <div class="mb-3">
                        <img src="images/logo-light.png" alt="" height="20">
                    </div>
                    @* <p class="pt-1 text-white-50">Bootstrap 4 Landing Page Template</p> *@
                    @* <p class="text-white-50">If several languages coalesce the grammar of the resulting language </p> *@
                </div>
                <div class="col-lg-2">
                    <h5 class="footer-title text-white mb-3">Navigare</h5>
                    <ul class="list-unstyled footer-list">
                        <li><a href="@Url.Action("Login", "Login")"><i class="fa-solid fa-user mr-1"></i>Logare</a></li>
                        <li><a href="@Url.Action("select", "Symptoms")"><i class="fa-solid fa-arrow-pointer mr-1"></i>Caută simptome</a></li>
                    </ul>
                </div>
                <div class="col-lg-2">
                    <h5 class="footer-title text-white mb-3">Social</h5>
                    <ul class="list-unstyled footer-list">
                        <li><a href="https://github.com/VictorC654/proiect_de_an_2024"><i class="fa-solid fa-folder-open mr-1"></i>Proiect GitHub</a></li>
                        <li><a href="https://github.com/VictorC654"><i class="fa-brands fa-github mr-1"></i>Calancea Victor</a></li>
                        <li><a href="https://github.com/mariusbvl"><i class="fa-brands fa-github mr-1"></i>Marius Bivol</a></li>
                        <li><a href="https://github.com/Wethermon"><i class="fa-brands fa-github mr-1"></i>Catana Daniel</a></li>
                    </ul>
                </div>
                <div class="col-lg-3">
                    <h5 class="footer-title text-white mb-3">Contact</h5>
                    <div class="pt-1">
                        <div class="float-left mr-2">
                            <i class="pe-7s-map-marker font-20"></i>
                        </div>
                        <p class="text-white-50 overflow-hidden"><i class="fa-solid fa-location-dot mr-1 text-danger"></i>Strada Studenților 7, Chișinău</p>
                    </div>
                    <div>
                        <div class="float-left mr-2">
                            <i class="pe-7s-phone font-20"></i>
                        </div>
                        <p class="text-white-50 overflow-hidden"><i class="fa-solid fa-phone mr-1 text-success"></i>060244322</p>
                    </div>
                    <div>
                        <div class="float-left mr-2">
                            <i class="pe-7s-mail font-20"></i>
                        </div>
                        <p class="text-white-50 overflow-hidden"><i class="fa-solid fa-envelope mr-1 text-info"></i>symptomsage@mail.com</p>
                    </div>
                </div>
            </div>
            <!-- end row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="py-4">
                        <div class="text-center">
                            <p class="text-success">2024 © <b>symptomSage</b></p>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end row -->
        </div>
        <!-- container-fluid end -->
    </footer>
    <!-- footer end -->


    @Scripts.Render("~/Scripts/jquery-3.7.1.js")
    @Scripts.Render("~/Scripts/templateScripts/bootstrap.bundle.min.js")
    @Scripts.Render("~/Scripts/templateScripts/jquery.easing.min.js")
    
    @Scripts.Render("~/Scripts/templateScripts/app.js")

    <script>
        $(document).ready(function () {
            $("#mySidenav").find('[href="' + window.location.pathname + '"]').parent().addClass('active');
        });

    </script>
</body>

</html>